<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="mehmetbalbay.spaceApp.ui.station.StationViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="UGS : 5000"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="UGS : 5000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="EUS: 500"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="EUS: 500" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="DS : 50000"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="DS : 50000" />

        </LinearLayout>

        <View
            android:id="@+id/info_container_line"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/info_container"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/vehicle_point_border" />

        <TextView
            android:id="@+id/space_vehicle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_container_line"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="WhartonX"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
</layout>